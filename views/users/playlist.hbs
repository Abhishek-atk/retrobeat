<div class="fav-song-main">
    {{#each playlist}}
    <a href="/playlist/{{_id}}" class="playlist-link">
        <div class="mycard mt-4">
            <h6>{{playlistName}}</h6>
        </div>
    </a>
    {{/each}}
</div>

<script>
    $(document).ready(() => {
        $(".playlist-link").click((event) => {
            event.preventDefault(); // prevent the link from navigating to a new page

            const url = $(event.currentTarget).attr("href"); // get the URL from the link

            $.ajax({
                url: url,
                method: "GET",
                success: (response) => {
                    $("#content").html(response).hide().fadeIn('slow')
                    window.history.pushState({ page: 'playlistSongs' }, 'playlistSongs', '/playlist-songs');
                },
                error: (xhr, status, error) => {
                    console.log(error);
                }
            });
        });
    });
</script>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .fav-song-main {
        background-color: transparent;
        display: flex;
        flex-wrap: wrap;
    }

    .mycard {
        margin: 15px;
        min-width: 150px;
        height: 150px;
        border-radius: 8px;
        transition: all 0.5s;
        border: 1px solid black;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .mycard h6 {
        color: white;
    }

    .mycard img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(70%) contrast(150%) saturate(0%) brightness(150%);
        border-radius: 8px;
    }

    .mycard h6 {
        color: black;
        text-align: center;

    }

    .mycard:hover {
        cursor: pointer;
        box-shadow: 0px 0px 10px 2px rgba(0, 0, 0, 0.2);
        transform: translateY(-8px);
    }
</style>